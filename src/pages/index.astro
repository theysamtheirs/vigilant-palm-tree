---
// Imports for the main index page
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import { SITE_TITLE } from "../config";
import ProjectList from "../components/ProjectList.astro";
import BlogList from "../components/BlogList.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | I know, write?`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <h1 class="lg:text-xl text-3xl font-bold mb-2">The sample posts from this template</h1>
    <BlogList />
    <h1 class="lg:text-xl text-3xl font-bold mt-6 mb-2">The sample projects from this template</h1>
    <ProjectList />
  </Fragment>
</PageLayout>
